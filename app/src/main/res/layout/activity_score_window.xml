<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scoreWindow">
    <TextView
            android:layout_width="263dp"
            android:layout_height="62dp"
            android:id="@+id/poziomWyswietl"
            android:textSize="36sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="61dp"
            android:id="@+id/dystansWyswietl"
            android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline12"/>
    <TextView
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:id="@+id/scoreWyswietl"
            android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline12" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"/>
    <TextView
            android:text="Your Score"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:id="@+id/textView9"
            android:textSize="36sp" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="20dp"
                                          app:layout_constraintGuide_percent="0"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_begin="20dp"
                                          app:layout_constraintGuide_percent="0.25"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline11" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline12" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.75"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline13" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="1.0"/>
</android.support.constraint.ConstraintLayout>