<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance"
            app:layout_constraintStart_toEndOf="@+id/distDescriptionTextview"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/distDescriptionTextview"/>
    <TextView
            android:text="level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLevel"
            app:layout_constraintStart_toEndOf="@+id/levelDescriptionTextview"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/levelDescriptionTextview"/>
    <TextView
            android:text="shuttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewShuttle"
            app:layout_constraintStart_toEndOf="@+id/shuttleDescriptionTextview"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/shuttleDescriptionTextview"/>
    <TextView
            android:text="Distance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distDescriptionTextview" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate"/>
    <TextView
            android:text="Level:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelDescriptionTextview" app:layout_constraintStart_toEndOf="@+id/textViewDistance"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/textViewDistance"/>
    <TextView
            android:text="Shuttle: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shuttleDescriptionTextview" app:layout_constraintStart_toEndOf="@+id/textViewLevel"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/textViewLevel"/>
</android.support.constraint.ConstraintLayout>